<h1>Listing talks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Institution</th>
    <th>Location</th>
    <th>Talk date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @talks.each do |talk| %>
  <tr>
    <td><%= talk.title %></td>
    <td><%= talk.institution %></td>
    <td><%= talk.location %></td>
    <td><%= talk.talk_date %></td>
    <td><%= link_to 'Show', talk %></td>
    <td><%= link_to 'Edit', edit_talk_path(talk) %></td>
    <td><%= link_to 'Destroy', talk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

